<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools" android:id="@+id/nav_graph"
            app:startDestination="@id/mainFragment">

    <fragment android:id="@+id/mainFragment"
              android:name="com.kotlin.navigation.MainFragment"
              android:label="Home"
              tools:layout="@layout/fragment_main">
    </fragment>

    <fragment android:id="@+id/blankFragment"
              android:name="com.kotlin.navigation.BlankFragment"
              android:label="DIALOG"
              tools:layout="@layout/fragment_blank">
        <action android:id="@+id/action_blankFragment_to_blankFragment2"
                app:destination="@id/blankFragment2"
                app:enterAnim="@anim/nav_default_enter_anim"
                app:exitAnim="@anim/nav_default_exit_anim"/>
        <argument android:name="text" app:argType="string" android:defaultValue="안왔잖아"/>
    </fragment>

    <fragment android:id="@+id/blankFragment2"
              android:name="com.kotlin.navigation.BlankFragment2"
              android:label="Detail"
              tools:layout="@layout/fragment_blank_fragment2">
    </fragment>

    <fragment android:id="@+id/blankFragment3"
              android:name="com.kotlin.navigation.BlankFragment3"
              android:label="EMAIL"
              tools:layout="@layout/fragment_blank_fragment3"/>
    <fragment android:id="@+id/blankFragment4"
              android:name="com.kotlin.navigation.BlankFragment4"
              android:label="SETTING"
              tools:layout="@layout/fragment_blank_fragment4">
    </fragment>
    <action android:id="@+id/action_global_mainFragment" app:destination="@id/mainFragment"/>
    <action android:id="@+id/action_global_blankFragment5" app:destination="@id/profile"/>

    <navigation android:id="@+id/profile" app:startDestination="@id/blankFragment5">
        <fragment android:id="@+id/loginFragment" android:name="com.kotlin.navigation.LoginFragment"
                  android:label="Login" tools:layout="@layout/fragment_login"/>
        <fragment android:id="@+id/blankFragment5"
                  android:name="com.kotlin.navigation.BlankFragment5"
                  android:label="Profile"
                  tools:layout="@layout/fragment_blank_fragment5">
            <action android:id="@+id/action_blankFragment5_to_loginFragment" app:destination="@id/loginFragment"/>
            <argument app:argType="string" android:name="name" android:defaultValue='""'/>
        </fragment>
        <argument android:name="name"/>
    </navigation>
</navigation>